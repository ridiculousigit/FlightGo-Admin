<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CustomerOrderDetailFragment">

    <ImageView
        android:id="@+id/arrowBack_Detail"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24_black"
        android:layout_margin="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/text_JudulDetail"
        android:text="Tambah Tiket"
        android:textSize="24dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/arrowBack_Detail"
        android:layout_margin="15dp"
        android:layout_width="186dp"
        android:layout_height="36dp"/>


    <TextView
        android:id="@+id/txtBuktipembayaran"
        android:text="Bukti Pembayaraan "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_JudulDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtTransaction"
        android:text="Transaction ID"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtBuktipembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_below="@+id/txtTransaction"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>