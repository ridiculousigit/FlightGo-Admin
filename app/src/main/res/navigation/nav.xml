<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="binar.academy.flightgoadmin.view.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="binar.academy.flightgoadmin.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addDataTiketFragment"
            app:destination="@id/addDataTiketFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="binar.academy.flightgoadmin.view.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/addDataTiketFragment"
        android:name="binar.academy.flightgoadmin.view.addDataTiketFragment"
        android:label="fragment_add_data_tiket"
        tools:layout="@layout/fragment_add_data_tiket" >
        <action
            android:id="@+id/action_addDataTiketFragment_to_detailTiketFragment"
            app:destination="@id/detailTiketFragment" />
    </fragment>
    <fragment
        android:id="@+id/costumerFragment"
        android:name="binar.academy.flightgoadmin.view.CostumerFragment"
        android:label="fragment_costumer"
        tools:layout="@layout/fragment_costumer" />
    <fragment
        android:id="@+id/detailTiketFragment"
        android:name="binar.academy.flightgoadmin.view.DetailTiketFragment"
        android:label="fragment_detail_tiket"
        tools:layout="@layout/fragment_detail_tiket" >
        <action
            android:id="@+id/action_detailTiketFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="binar.academy.flightgoadmin.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/customerOrderDetailFragment"
        android:name="binar.academy.flightgoadmin.view.CustomerOrderDetailFragment"
        android:label="fragment_customer_order_detail"
        tools:layout="@layout/fragment_customer_order_detail" />
</navigation>